{
  "name": "chromatichq/standards-php",
  "type": "phpcodesniffer-standard",
  "description": "Custom ruleset for PHPCS.",
  "homepage": "https://github.com/ChromaticHQ/standards-php",
  "keywords": [
    "phpcs",
    "standards",
    "code review"
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.3",
    "squizlabs/php_codesniffer": "^3.5.5"
  },
  "scripts": {
    "cs-check": "./vendor/bin/phpcs -p"
  },
  "autoload": {
    "psr-4": {
      "Chromatic\\": "src/Chromatic/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Mark Dorison",
      "homepage": "https://chromatichq.com"
    }
  ]
}
